{
  "ConnectionStrings": {
    "DefaultConnection": "Server=host.docker.internal;Database=MyWebAppDb;TrustServerCertificate=True;User Id=myuser;Password=password;"
  },
  "LoggingProvider" : "Serilog",
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Serilog": {
  "Using": [ "Serilog.Sinks.Grafana.Loki" ],
  "MinimumLevel": "Information",
  "WriteTo": [
    {
      "Name": "GrafanaLoki",
      "Args": {
        "uri": "http://loki:3100",      
        "labels": [
          { "key": "app", "value": "MyDotnetApp" },
          { "key": "env", "value": "dev" }
        ],
        "propertiesAsLabels": [ "SourceContext" ]
      }
    },
    { "Name": "Console" }
  ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  },

  "AllowedHosts": "*"
}
