<Page x:Class="WpfApp.RegisterPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp"
        mc:Ignorable="d">

    <Grid Background="{DynamicResource Theme_BackgroundBrush}">
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
        <Border Background="#FFF" CornerRadius="16" Padding="40" Width="352" HorizontalAlignment="Center" VerticalAlignment="Center" >
            <StackPanel>
                <Image Width="72" Height="72" x:Name="Logo" HorizontalAlignment="Center" Margin="0,0,0,24"/>
                <TextBlock Text="Create Account" FontSize="32" FontWeight="Bold" Foreground="#222" HorizontalAlignment="Center" Margin="0,0,0,24"/>
                <StackPanel Margin="0,0,0,32">
                    <TextBlock Text="New Username" FontSize="16" Margin="0,0,0,8"/>
                    <TextBox x:Name="UsernameTextBox" Height="32" FontSize="16" MinWidth="240" />
                </StackPanel>
                <StackPanel Margin="0,0,0,12">
                    <TextBlock Text="New Password" FontSize="16" Margin="0,0,0,8"/>
                    <PasswordBox x:Name="PasswordBox" Height="32" FontSize="16" MinWidth="240" />
                </StackPanel>
                <StackPanel Margin="0,0,0,24">
                    <TextBlock Text="Confirm Password" FontSize="16" Margin="0,0,0,8"/>
                    <PasswordBox x:Name="ConfirmPasswordBox" Height="32" FontSize="16" MinWidth="240" />
                </StackPanel>
                <Button Content="Register" Click="RegisterClick" Height="40" Width="240" HorizontalAlignment="Center" FontSize="16" Background="#0066CC" Foreground="White"/>
                <TextBlock  FontSize="10" Foreground="#888" HorizontalAlignment="Center" Margin="0,12,0,0"> 
                        Already have an account? Click <Hyperlink Click="GoToLoginEvent"> here </Hyperlink> to Login
                </TextBlock>
                <TextBlock Text="Warehouse Inventory App" FontSize="14" Foreground="#888" HorizontalAlignment="Center" Margin="0,24,0,0"/>
            </StackPanel>
        </Border>
        </ScrollViewer>
    </Grid>
</Page>